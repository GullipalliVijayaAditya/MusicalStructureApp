<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/songs_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/song_height"
        android:contentDescription="@string/song_img"
        android:scaleType="centerCrop"
        tools:src="@drawable/mumford" />

    <TextView
        android:id="@+id/songs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:textColor="@color/tabSelected"
        android:textSize="@dimen/text_large_16"
        tools:text="Mumford and Sons" />

    <ListView
        android:id="@+id/songs_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_divider_10"
        android:padding="@dimen/padding_10" />

</LinearLayout>