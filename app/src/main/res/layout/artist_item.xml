<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    android:maxHeight="@dimen/margin_10">

    <RelativeLayout
        android:id="@+id/artist_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/artist_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:textSize="@dimen/text_title_18"
            tools:text="Mumford and Sons" />

        <ImageView
            android:id="@+id/artist_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/artist_title_text"
            android:contentDescription="@string/artist_img"
            tools:src="@drawable/mumford" />

    </RelativeLayout>

</android.support.v7.widget.CardView>